<%- include('./includes/head', {pageTitle: "All products" }) %>
<link rel="stylesheet" href="/styles/products.css">
<script src="/scripts/product-management.js" defer></script>

</head>


  <body>
    <%- include('./includes/header') %>

      <main>
        <h1>Catalogue Administration</h1>
        <section>
          <h2>Add books to the library catalogue.</h2>
          <p>
            <a href="/admin/products/new" class="btn">Add Book</a>
          </p>
        </section>

        <section>
          <ul id="products-grid">
              <% for (const book of books) { %>
                <li>
                  <%- include('includes/book-item', { book: book }) %>
                </li>
              <% } %>
          </ul>
      </section>


      </main>

  </body>

  </html>